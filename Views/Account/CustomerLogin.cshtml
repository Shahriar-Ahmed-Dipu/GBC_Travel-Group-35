@{
    ViewData["Title"] = "Customer Login";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f2f5;
      
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    form {
        width: 40%; /* Set the width of the form to 50% */
        margin:auto;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: white;
        /* Additional styles to ensure form is centered */
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    h2 {
        color: #333;
    }

    input[type=email], input[type=password] {
        width: calc(100% - 20px); /* Adjust width to ensure padding doesn't extend input fields */
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<h2>Customer Login</h2>
<form asp-controller="Booking" asp-action="Index" method="post">
    <input type="email" name="Email" placeholder="Email" required />
    <input type="password" name="Password" placeholder="Password" required />
    <button type="submit" class="btn btn-primary">Login</button>
</form>
