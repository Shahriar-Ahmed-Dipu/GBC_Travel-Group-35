@model IEnumerable<GBC_Travel_Group_35.Models.CarRental>

<h2>Car Rental Search Results</h2>


<style>
    /* Basic reset */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f2f2f2;
        line-height: 1.6;
        padding: 20px;
        color: #333;
    }

    h2 {
        color: #0056b3;
        margin-bottom: 20px;
    }

    p {
        font-size: 16px;
        color: #666;
    }

    /* Table styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
        background-color: #fff;
    }

        .table thead th {
            background-color: #007bff;
            color: #ffffff;
            padding: 12px;
            text-align: left;
            border-bottom: 2px solid #0056b3;
        }

        .table tbody td {
            padding: 12px;
            border-bottom: 1px solid #dddddd;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #dddfe2;
        }

    /* Button styles */
    .btn {
        display: inline-block;
        font-weight: 400;
        color: #212529;
        text-align: center;
        vertical-align: middle;
        user-select: none;
        background-color: #007bff;
        border: 1px solid #007bff;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.375rem;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #0d5ab9;
            border-color: #0d5ab9;
        }

</style>















@if (!Model.Any())
{
    <p>No cars available for your search criteria.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Model</th>
                <th>Rental Company</th>
                <th>Price</th>
                <th>Availability</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Model</td>
                    <td>@car.RentalCompany</td>
                    <td>$@car.Price</td>
                    <td>@(car.IsAvailable ? "Yes" : "No")</td>
                    <td>

                        <div>
                            @*<p>@car.Model - @car.RentalCompany - $@car.Price - Available: @car.IsAvailable</p>*@

                            <form asp-action="BookCarRental" asp-controller="Booking" method="post">
                                <input type="hidden" name="CarRentalId" value="@car.CarRentalId" />
                                <input type="hidden" name="UserEmail" value="user@example.com" />
                                <input type="hidden" name="Price" value="@car.Price" />
                                <button type="submit" class="btn btn-primary">Book Now</button>
                            </form>
                            </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
